{
    "const": {
        "base" : "/api/yggdrasil",
        "debug" : "/debug",
        "util" : "/util"
    },
    "database": {
        "type": "SqliteDatabase",
        "connect_info": {
            "global_db": "./data/global.db"
        },
        "globalinfo": {},
        "other": {
            "global": {},
            "cache": {}
        }
    },
    "AuthLimit": 1,
    "ServerIDOutTime": 30,
    "TokenTime": {
        "RefrushTime": 5,
        "EnableTime": 3,
        "TimeRange": 60
    },
    "salt": "sX*h-b<.$&$vt8mzgS%9IE6nXe3EU|=`",
    "AdditionalParameters": {
        "debug": true,
        "bind": "127.0.0.1:5001",
        "loglevel": "debug"
    },
    "TexturePath": "./data/texture/",
    "HostUrl": "http://127.0.0.1:5001",
    "ProfileSearch": {
        "MaxAmount": 8
    },
    "YggdrasilIndexData": {
        "serverName" : "KnowledgeFruits - Minecrart Yggdrasil",
        "implementationName" : "knowledge_fruits",
        "implementationVersion" : "v0.0.1"
    },
    "KeyPath": {
        "Private": "./data/rsa.pem",
        "Public": "./data/public.pem"
    },
    "reMatch": {
        "PlayerName": {
            "content": "[a-zA-Z0-9_-]",
            "length": {
                "min": 4,
                "max": 16
            },
            "isSigner": true
        },
        "UserPassword": {
            "content": "^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]",
            "length": {
                "min": 6,
                "max": 21
            },
            "isSigner": true
        },
        "UserEmail": {
            "content": "^([a-zA-Z0-9]+[_|\\_|\\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\\_|\\.]?)*[a-zA-Z0-9]+\\.[a-zA-Z]",
            "length": {
                "min": 2,
                "max": 3
            },
            "isSigner": true
        } 
    },
    "GroupLimit": {
        "EachUser": {
            "create_group_number_limit": {
                "enable": false,
                "limit": 3
            },
            "created_group_member_number_limit": {
                "enable": false,
                "limit": [8, 20]
            },
            "created_group_member_deputy_manager_number_limit": {
                "enable": true,
                "limit": 3
            },
            "created_group_member_deputy_manager_can_ban_others": {
                "enable": false
            },
            "created_group_member_deputy_manager_can_ban_common_max_date": {
                "limit": [1, 259200]
            },
            "created_group_manager_can_handover_authority_to_common_user": {
                "enable": true
            },
            "created_group_delete_when_member_number_be_zero": {
                "enable": false
            }
        }
    },
    "UploadSkin": {
        "security": {
            "size": {
                "width": [0, 128],
                "height": [0, 128]
            }
        }
    },
    "GetSkin": {
        "AutoMojang": true
    }
}